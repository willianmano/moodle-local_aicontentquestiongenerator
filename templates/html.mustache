{{!
    @template local_aicontentquestiongenerator/question

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * attributes Array of name / value pairs.

    Example context (json):
    {
        "attributes": [
            { "name": "src", "value": "https://example.com/imgs/logo.png" },
            { "name": "class", "value": "iconsmall" }
        ]
    }
}}

<div class="alert alert-light mt-4" role="alert">
    <h4><i class="fa-solid fa-person-chalkboard"></i> Chegou a hora de praticar!</h4>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{pergunta}}</h5>

            {{#questoes}}
                <div class="form-check">
                    <input class="form-check-input" name="form-aicontentquestiongenerator" type="radio" id="option-{{key}}" data-correta="{{correta}}">
                    <label class="form-check-label" for="option-{{key}}">
                        {{titulo}}
                    </label>
                </div>
            {{/questoes}}
        </div>
    </div>

    <div class="alert alert-success mt-2 d-none" role="alert" id="aicontentquestiongenerator-success">
        Parabéns! Você escolheu a resposta correta.
    </div>

    <div class="alert alert-danger mt-2 d-none" role="alert" id="aicontentquestiongenerator-error">
        Resposta incorreta. Tente novamente!
    </div>
</div>

{{#js}}
    require(['jquery'], function($) {
        $(document).ready(function() {
            $('input[name="form-aicontentquestiongenerator"]').on('change', function() {
                $('#aicontentquestiongenerator-success').addClass('d-none');
                $('#aicontentquestiongenerator-error').addClass('d-none');

                if ($(this).data('correta')) {
                    $('#aicontentquestiongenerator-success').removeClass('d-none');
                } else {
                    $('#aicontentquestiongenerator-error').removeClass('d-none');
                }
            });
        });
    });
{{/js}}